# You can learn more about editorconfig here: https://docs.microsoft.com/en-us/visualstudio/ide/editorconfig-code-style-settings-reference
root = true

[**]
insert_final_newline = true
trim_trailing_whitespace = true

[*.sh]
end_of_line = lf

[*.py]
indent_style = space
tab_width = 4

[*.xml]
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = false
end_of_line = lf

[*.json]
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = false

[*.pyproj]
# The project save trims the final newline
insert_final_newline = false
indent_style = space
indent_size = 2
